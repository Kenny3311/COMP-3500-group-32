<!DOCTYPE html>
<html>
	<head>
		<title>Restaurants</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="/customer_menu.css" />
	</head>
	<body>
		<div class="container py-5">
			<div class="position-relative mb-4">
				<h1 class="text-center">Restaurants</h1>
				<a href="/customer/orders" class="btn btn-outline-primary position-absolute top-0 end-0"
					id="orders-button"
					>My Orders</a>
			</div>
			<div class="row g-4">
				<% restaurants.forEach(r => { %>
				<div class="col-md-4">
					<div class="card h-100" id="restaurant-card">
						<div class="card-body">
							<h4 class="card-title"><%= r.name %></h5>
							<p class="card-text text-muted"><%= r.cuisine_type %></p>
							<a href="/customer/menu/<%= r.name %>" class="btn btn-primary w-100" id="view-button"
								>View Menu</a
							>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
	</body>
</html>
